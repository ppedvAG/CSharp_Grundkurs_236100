<Window x:Class="M015_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen">
	<StackPanel Margin="10">
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Neu">
					<MenuItem Header="Projekt">
						<MenuItem Header="Noch ein Menü" Click="Button_Click"/>
					</MenuItem>
				</MenuItem>
			</MenuItem>
		</Menu>
		<Button Width="100" Height="30" Content="Ein Button" Click="Button_Click"/>
		<TextBlock FontSize="20" TextAlignment="Center" Name="TB"/>
		<ComboBox Name="CB" SelectionChanged="CB_SelectionChanged"/>
		<ListBox x:Name="LB" SelectionChanged="LB_SelectionChanged" SelectionMode="Extended"/>
		<CheckBox Content="CheckBox 1" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
		<CheckBox Content="CheckBox 2" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<CheckBox Content="CheckBox 3" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<RadioButton GroupName="RB1"/>
		<RadioButton GroupName="RB1"/>
		<RadioButton GroupName="RB2"/>
		<RadioButton GroupName="RB2"/>
	</StackPanel>
</Window>
